generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Budget    Budget?
}

model Budget {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          User     @relation(fields: [userId], references: [id])
  month         DateTime
  year          DateTime
  totalIncome   BigInt
  totalExpenses BigInt
  totalSavings  BigInt
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Receive       Receive?
  Spend         Spend?
}

model Receive {
  id        Int
  budgetId  Int      @unique
  budget    Budget   @relation(fields: [budgetId], references: [id])
  amount    BigInt
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Spend {
  id        Int
  budgetId  Int      @unique
  budget    Budget   @relation(fields: [budgetId], references: [id])
  amount    BigInt
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
